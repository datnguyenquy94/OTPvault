    <!--Promhub-->
    <color name="pronHubColorPrimary">#ffa31a</color>
    <color name="pronHubColorSecondary">#808080</color>
    <color name="pronHubColorTertiary">#ffffff</color>
    <color name="pronHubColorPrimaryDark">#1b1b1b</color>
    <color name="pronHubColorSecondaryDark">#292929</color>

    <!--Light-->
    <color name="lightColorPrimary">#ff424242</color>
    <color name="lightColorSecondary">#ff757575</color>
    <color name="lightColorTertiary">#ffffff</color>
    <color name="lightColorPrimaryDark">#fffafafa</color>
    <color name="lightColorSecondaryDark">#ffe0e0e0</color>
    <color name="lightColorTertiaryDark">#ffd0d0d0</color>

    <!--Dark-->
    <color name="darkColorPrimary">#ffffff</color>
    <color name="darkColorSecondary">#ffd6d7d7</color>
    <color name="darkColorTertiary">#808080</color>
    <color name="darkColorPrimaryDark">#1b1b1b</color>
    <color name="darkColorSecondaryDark">#292929</color>
    <color name="darkColorTertiaryDark">#393939</color>

    <!--<style name="TestTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">-->
    <style name="Light" parent="Theme.AppCompat.Light">
        <item name="colorSchemePrimary">@color/lightColorPrimary</item>
        <item name="colorSchemeSecondary">@color/lightColorSecondary</item>
        <item name="colorSchemeTertiary">@color/lightColorTertiary</item>
        <item name="colorSchemeBackgroundPrimary">@color/lightColorPrimaryDark</item>
        <item name="colorSchemeBackgroundSecondary">@color/lightColorSecondaryDark</item>
        <item name="colorSchemeBackgroundTertiary">@color/lightColorTertiaryDark</item>
    </style>

    <style name="Light.Dialog" parent="Light">
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/RtlOverlay.DialogWindowTitle.AppCompat</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
        <item name="android:windowBackground">@drawable/abc_dialog_material_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>
        <item name="android:listDivider">@null</item>
        <item name="android:buttonBarStyle">@style/Widget.AppCompat.ButtonBar.AlertDialog</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Dark" parent="Theme.MaterialComponents">
        <item name="colorSchemePrimary">@color/darkColorPrimary</item>
        <item name="colorSchemeSecondary">@color/darkColorSecondary</item>
        <item name="colorSchemeTertiary">@color/darkColorTertiary</item>
        <item name="colorSchemeBackgroundPrimary">@color/darkColorPrimaryDark</item>
        <item name="colorSchemeBackgroundSecondary">@color/darkColorSecondaryDark</item>
        <item name="colorSchemeBackgroundTertiary">@color/darkColorTertiaryDark</item>
    </style>

    <style name="Dark.Dialog" parent="Dark">
<!--        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/RtlOverlay.DialogWindowTitle.AppCompat</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
<!--        <item name="android:windowBackground">@drawable/abc_dialog_material_background</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>
        <item name="android:listDivider">@null</item>
        <item name="android:buttonBarStyle">@style/Widget.AppCompat.ButtonBar.AlertDialog</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="PromhubTestTheme" parent="Theme.Design.Light">
        <item name="colorSchemePrimary">@color/pronHubColorPrimary</item>
        <item name="colorSchemeSecondary">@color/pronHubColorSecondary</item>
        <item name="colorSchemeTertiary">@color/pronHubColorTertiary</item>
        <item name="colorSchemeBackgroundPrimary">@color/pronHubColorPrimaryDark</item>
        <item name="colorSchemeBackgroundSecondary">@color/pronHubColorSecondaryDark</item>
        <!--status bar text color-->
        <item name="android:background">@color/pronHubColorPrimaryDark</item>
        <!--<item name="android:action">#ff0000</item>-->
        <item name="android:textColor">@color/pronHubColorPrimary</item>
        <item name="android:textColorSecondary">@color/pronHubColorPrimary</item>
        <!--<item name="android:textColorPrimary">@color/colorPrimary</item>-->
        <!--<item name="android:statusBarColor">@color/colorPrimary</item>-->
        <item name="android:editTextColor">@color/pronHubColorPrimary</item>
        <!--Edit Text Focus Under Line Color-->
        <item name="android:colorControlActivated">@color/pronHubColorPrimary</item>
        <item name="actionMenuTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Menu</item>
        <item name="android:actionMenuTextColor">@color/pronHubColorPrimary</item>
    </style>
</resources>
